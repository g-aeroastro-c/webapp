# Copy this file to .env.local and fill in values

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Only used on server; DO NOT expose publicly
SUPABASE_SERVICE_ROLE_KEY=

# Site URL (used for redirects in auth routes)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: restrict email domain (middleware)
NEXT_PUBLIC_ALLOWED_EMAIL_DOMAIN=gitam.edu

# Comma-separated list of admin emails (server-only check in finalize route)
ALLOWLIST_ADMINS=

# Email configuration for contact form
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
